{
  "name": "@terralinke/test-suite",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for TerraLinke platform",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest frontend/component.test.js",
    "test:smart-contracts": "python smart-contracts/test_climate_dao.py",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test e2e/platform.spec.js",
    "test:performance": "python performance/load_test.py",
    "test:quick": "python performance/load_test.py --quick",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:security": "npm audit && python security/security_scan.py",
    "test:accessibility": "pa11y http://localhost:3000",
    "test:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./test-results/lighthouse.json",
    "test:load": "artillery run performance/artillery-config.yml",
    "report:generate": "node scripts/generate-test-report.js",
    "report:open": "open test-results/coverage/index.html"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.0",
    "artillery": "^2.0.0",
    "pa11y": "^7.0.0",
    "lighthouse": "^11.0.0"
  },
  "dependencies": {
    "aiohttp": "^3.9.0",
    "algosdk": "^2.7.0",
    "psutil": "^5.9.0",
    "matplotlib": "^3.8.0",
    "numpy": "^1.26.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "frontend/**/*.{js,jsx,ts,tsx}",
      "!frontend/**/*.d.ts",
      "!frontend/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/**/*.(test|spec).{js,jsx,ts,tsx}"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/frontend/$1"
    }
  },
  "playwright": {
    "testDir": "./e2e",
    "timeout": 30000,
    "expect": {
      "timeout": 5000
    },
    "fullyParallel": true,
    "forbidOnly": true,
    "retries": 2,
    "workers": 4,
    "reporter": [
      ["html", { "outputFolder": "test-results/playwright-report" }],
      ["json", { "outputFile": "test-results/test-results.json" }]
    ],
    "use": {
      "baseURL": "http://localhost:3000",
      "trace": "on-first-retry",
      "screenshot": "only-on-failure"
    },
    "projects": [
      {
        "name": "chromium",
        "use": "@playwright/test/devices/Desktop Chrome"
      },
      {
        "name": "firefox",
        "use": "@playwright/test/devices/Desktop Firefox"
      },
      {
        "name": "webkit",
        "use": "@playwright/test/devices/Desktop Safari"
      },
      {
        "name": "Mobile Chrome",
        "use": "@playwright/test/devices/Pixel 5"
      },
      {
        "name": "Mobile Safari",
        "use": "@playwright/test/devices/iPhone 12"
      }
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  },
  "keywords": [
    "testing",
    "blockchain",
    "climate",
    "dao",
    "algorand",
    "performance",
    "e2e",
    "automation"
  ],
  "author": "TerraLinke Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lhcee3/AI-G-DAO"
  }
}